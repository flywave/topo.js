{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2022",
    "module": "es2020",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "watch": true,
    "readme": "none",
    "excludeProtected": true
  }
}